  -title = 'Khu đậu xe'
  -bodyClass = 'home'
  -menuIndex = 0

block container
  #main-slider.homepage
    .slider-container(data-home-slider)
      .slide(data-url="images/photos/gym1.jpg")
      .slide(data-url="images/photos/gym2.jpg")
      .slide(data-url="images/photos/gym3.jpg")
      .slide(data-url="images/photos/gym4.jpg")
